export PATH="/bin:$PATH"
export PATH="$HOME/.rbenv/bin:./bin:~/bin:~/bin:/usr/local/homebrew/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/local/git/bin:/usr/local/homebrew/bin:$PATH"

# Set PATH, CDPATH, EDITOR, etc.

export EDITOR="ec"
export EDITOR_NO_WAIT=${EDITOR/\-w/}
export CLICOLOR=1
export LSCOLORS=Exfxcxdxbxegedabagacad

# Tell grep to highlight matches
export GREP_OPTIONS='--color=auto'

# history
export HISTCONTROL=ignorespace:erasedups
export HISTIGNORE="l:ll:pwd"
export HISTFILESIZE=1000000000
export HISTSIZE=1000000
shopt -s histappend # append instead of rewrite

export PROMPT_COMMAND="history -a" # save history after every command

